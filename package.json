{
  "name": "mcp-kanban-server",
  "version": "0.1.0",
  "description": "MCP Kanban Spec-Driven Development Server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sdd": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/cli/index.js",
    "start": "node dist/index.js",
    "cli": "tsx src/cli/index.ts",
    "mcp": "tsx src/server.ts",
    "web": "tsx src/web-ui.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "kanban",
    "spec-driven-development"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.17.10",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "eslint": "^9.16.0",
    "inquirer": "^13.0.2",
    "ora": "^9.0.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "gray-matter": "^4.0.3",
    "open": "^10.1.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "simple-git": "^3.27.0",
    "yaml": "^2.6.1",
    "zod": "^4.1.13"
  }
}
